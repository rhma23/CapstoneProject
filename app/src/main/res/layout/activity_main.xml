<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/txtWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/welcome" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/user_name" />

                        <ImageView
                            android:id="@+id/iconHand"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_hand"
                            android:contentDescription="@null"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:text="logout"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"/>

<!--                <ImageView-->
<!--                    android:id="@+id/imgProfile"-->
<!--                    android:layout_width="48dp"-->
<!--                    android:layout_height="48dp"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_marginEnd="8dp"-->
<!--                    android:src="@drawable/ic_cloudy"-->
<!--                    android:contentDescription="@string/profile_picture_description"/>-->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_header_rounded"
                tools:ignore="ContentDescription">

                <TextView
                    android:id="@+id/txtWeatherMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_content_cuaca"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <!-- Rekomendasi Makanan -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <!-- Makanan 1 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="8dp">

                            <ImageView
                                android:id="@+id/imgSeblak"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/ic_person"
                                android:scaleType="centerCrop"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/txtSeblak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seblak"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Makanan 2 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="8dp">

                            <ImageView
                                android:id="@+id/imgMie"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/ic_hand"
                                android:scaleType="centerCrop"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/txtMie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mie"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Makanan 3 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imgBakso"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/ic_email"
                                android:scaleType="centerCrop"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/txtBakso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bakso"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/categories"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnFood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_kategori_makanan_selector"
                    android:text="@string/food"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnDrink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/btn_kategori_minuman_selector"
                    android:text="@string/drink"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Recommendations Section -->
            <TextView
                android:id="@+id/txtRecommendations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/recommendations"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- Popular Section -->
            <TextView
                android:id="@+id/txtPopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/popular"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPopular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
