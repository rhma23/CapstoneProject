<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".otp.OtpFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_header_rounded"
            android:padding="25dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/back_button_selector"
                android:contentDescription="@string/back_button"
                android:elevation="4dp"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/txtCreateYour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="60dp"
                android:text="@string/code"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCreateYour"
                android:layout_alignStart="@id/txtCreateYour"
                android:text="@string/verification"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:orientation="vertical">

                <!-- Verification Info -->
                <TextView
                    android:id="@+id/txtVerify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="@string/enter_the_4_digit_code_sent_to_your_email" />

                <!-- OTP Input -->
                <EditText
                    android:id="@+id/otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColorHint="@color/hint_color" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/txtOtpPart1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/didn_t_receive_the_verification_otp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtOtpPart2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resend_again"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnSendOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/register_button_selector"
            android:padding="10dp"
            android:text="@string/verify"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    </LinearLayout>
</layout>
